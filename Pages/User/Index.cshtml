@page
@model WebApplication1.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Users";
}

<h1 class="text-center text-capitalize">Users</h1>
<div class="row justify-content-end">
    <a asp-page="New" class="btn btn-primary mb-2">New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                <div>
                    Title
                </div>
            </th>
            <th>
                <div>
                    First Name
                </div>
            </th>
            <th>
                <div>
                    Last Name
                </div>
            </th>
            <th>
                <div>
                    DOB
                </div>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    <div>
                        @item.Title
                    </div>
                </td>
                <td>
                    <div>
                        @item.FirstName
                    </div>
                </td>
                <td>
                    <div>
                        @item.LastName
                    </div>
                </td>
                <td>
                    <div>
                        @item.DOB.ToShortDateString()
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
